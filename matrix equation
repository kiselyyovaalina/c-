#include <cmath>
using namespace std;
double determ(double** Arr, int size);

double power(int a, int b)
{
    int i = b;
    int k = 1;

            if (b > 0)
            {
                k=a*power(a, b-1);

            }
return k;
}
void multAB(double** a, double** b, double** x,int row1,int col1, int row2, int col2)
{
  for (int i = 0; i < row1; i++)
  {
    x[i] = new double[col2];
    for (int j = 0; j < col2; j++)
    {
      x[i][j] = 0;
      for (int k = 0; k < col1; k++)
        x[i][j] += a[i][k] * b[k][j];
    }
  }
}

int minor (double**m ,int row1)
  {
       int k;


          for (int i=0; i<row1; i++)
       {
          for (int j=i; j<row1; j++)
             {
               k=m[i][j];
               m[i][j]=m[j][i];
               m[j][i]=k;
              }
         }
          for (int i=0; i<row1-1; i++)
       {
          for (int j=0; j<row1-1; j++)
             {
                    if (i==j)
                    {
                       k=m[i][j];
               m[i][j]=m[i+1][j+1];
               m[i+1][j+1]=k;
                    }
              }
         }
         return k;
  };
int trans (double**At ,int row1,int col1)
  {
    int k;
    for (int i=0; i<row1; i++)
       {
          for (int j=i; j<col1; j++)
             {
               k=At[i][j];
               At[i][j]=At[j][i];
               At[j][i]=k;
              }
         }
         return k;
  };
